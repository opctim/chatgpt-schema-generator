{
  "name": "User",
  "strict": false,
  "schema": {
    "type": "object",
    "properties": {
      "id": {
        "description": "User ID.",
        "type": "integer"
      },
      "role": {
        "type": "string",
        "enum": [
          "admin",
          "editor",
          "viewer"
        ],
        "description": "User role."
      },
      "address": {
        "type": "object",
        "properties": {
          "street": {
            "description": "Street name.",
            "type": "string"
          },
          "city": {
            "description": "City name.",
            "type": "string"
          },
          "postalCode": {
            "description": "Postal code.",
            "type": "string"
          }
        },
        "required": [
          "street",
          "city",
          "postalCode"
        ]
      },
      "tags": {
        "description": "List of tags for the user.",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "previousAddresses": {
        "description": "List of addresses the user has lived in.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "street": {
              "description": "Street name.",
              "type": "string"
            },
            "city": {
              "description": "City name.",
              "type": "string"
            },
            "postalCode": {
              "description": "Postal code.",
              "type": "string"
            }
          },
          "required": [
            "street",
            "city",
            "postalCode"
          ]
        }
      }
    },
    "required": [
      "id",
      "role",
      "address",
      "tags",
      "previousAddresses"
    ]
  }
}